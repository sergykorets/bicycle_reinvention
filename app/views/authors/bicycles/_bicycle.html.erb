<tr>
  <td><%= link_to bicycle.name, authors_bicycle_path(bicycle) %></td>
  <td><%= link_to bicycle.category.name, root_path(category: bicycle.category.id) %></td>
  <td></td>
  <% if bicycle.published? %>
  	<td><%= link_to "Unpublish", unpublish_authors_bicycle_path(bicycle), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
  	<td><%= link_to "Publish", publish_authors_bicycle_path(bicycle), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to "Edit", edit_authors_bicycle_path(bicycle), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to "Remove", authors_bicycle_path(bicycle), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>